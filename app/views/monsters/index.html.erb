<p id="notice"><%= notice %></p>

<div class = "contents">
<h1 class = "title">大型モンスター一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>火</th>
      <th>水</th>
      <th>雷</th>
      <th>氷</th>
      <th>土</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <% types = ["fire","water","thunder","ice","soil"] %>
        <% if monster.fire == 1 then %>
            <td><%= "○" %></td>
            <%else %>
            <td><%= "×" %></td>
            <% end %>
        <% if monster.water == 1 then %>
            <td><%= "○" %></td>
        <%else %>
            <td><%= "×" %></td>
        <% end %>
        <% if monster.thunder == 1 then %>
            <td><%= "○" %></td>
        <%else %>
            <td><%= "×" %></td>
        <% end %>
        <% if monster.ice == 1 then %>
            <td><%= "○" %></td>
        <%else %>
            <td><%= "×" %></td>
        <% end %>
        <% if monster.soil == 1 then %>
            <td><%= "○" %></td>
        <%else %>
            <td><%= "×" %></td>
        <% end %>
        <td><%= monster.comment %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>