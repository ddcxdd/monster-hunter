<p id="notice"><%= notice %></p>
<body class = "contents">
<h1>大型モンスタ-一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>火</th>
      <th>水</th>
      <th>雷</th>
      <th>氷</th>
      <th>土</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.fire %></td>
        <td><%= monster.water %></td>
        <td><%= monster.thunder %></td>
        <td><%= monster.ice %></td>
        <td><%= monster.soil %></td>
        <td><%= monster.comment %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monster', new_monster_path %>
</body>