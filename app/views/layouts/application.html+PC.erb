          <% end %>
        </ul>
      </div>

    </div>


    <div class="sidebar-right">
      <h1 id="sidebar-ninki">人気記事</h1>
      <ul>
        <% @notes.each do |note| %>
            <% if File.exist? "app/assets/images/kiji/"+note.id.to_s+"-1.png" %>
                <li><%= link_to image_tag("kiji/"+note.id.to_s+"-1"), note_path(note.id) %></li>
            <% elsif File.exist? "app/assets/images/kiji/"+note.id.to_s+"-1.jpg" %>
                <li><%= link_to image_tag("kiji/"+note.id.to_s+"-1"), note_path(note.id) %></li>
            <% else %>
                <li><%= link_to image_tag("logo"), note_path(note.id) %></li>
            <% end %>
