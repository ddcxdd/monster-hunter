          <% @notes.each do |note| %>
              <% if [1, 2, 3, 4, 5, 6].include? note.id %>
                  <li><%= link_to image_tag("logo.jpg"), note_path(note.id) %>

                    <%= link_to note.title, note_path(note.id) %></li>

