<p id="notice"><%= notice %></p>

<h1>武器一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Skill</th>
      <th>Zokusei</th>
      <th>Rare</th>
      <th>Max level</th>
      <th>Series</th>
      <th>Attack</th>
      <th>Max attack</th>
      <th>Item</th>
      <th>Item number</th>
      <th>Hyouka</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arms.each do |arm| %>
      <tr>
        <td><%= arm.name %></td>
        <td><%= arm.skill %></td>
        <td><%= arm.zokusei %></td>
        <td><%= arm.rare %></td>
        <td><%= arm.max_level %></td>
        <td><%= arm.series %></td>
        <td><%= arm.attack %></td>
        <td><%= arm.max_attack %></td>
        <td><%= arm.item %></td>
        <td><%= arm.item_number %></td>
        <td><%= arm.hyouka %></td>
        <td><%= arm.comment %></td>
        <td><%= link_to 'Show', arm %></td>
        <td><%= link_to 'Edit', edit_arm_path(arm) %></td>
        <td><%= link_to 'Destroy', arm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

